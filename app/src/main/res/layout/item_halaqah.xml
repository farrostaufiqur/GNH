<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/primary_rect_rounded">

        <ImageView
            android:id="@+id/iv_item_halaqah_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars"
            android:contentDescription="@string/iv_halaqah_profile_desc" />

        <TextView
            android:id="@+id/tv_item_halaqah_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="@+id/iv_item_halaqah_photo"
            app:layout_constraintStart_toEndOf="@+id/iv_item_halaqah_photo"
            app:layout_constraintTop_toTopOf="@+id/iv_item_halaqah_photo"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/tv_item_halaqah_date_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_item_halaqah_photo"
            app:layout_constraintStart_toEndOf="@+id/tv_item_halaqah_name"
            app:layout_constraintTop_toTopOf="@+id/iv_item_halaqah_photo"
            tools:text="@tools:sample/date/ddmmyy" />

        <TextView
            android:id="@+id/tv_item_halaqah_count_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_item_halaqah_photo"
            app:layout_constraintStart_toEndOf="@+id/tv_item_halaqah_date_join"
            app:layout_constraintTop_toTopOf="@+id/iv_item_halaqah_photo"
            tools:text="0" />

        <TextView
            android:id="@+id/tv_item_halaqah_count_permit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_item_halaqah_photo"
            app:layout_constraintStart_toEndOf="@+id/tv_item_halaqah_count_no"
            app:layout_constraintTop_toTopOf="@+id/iv_item_halaqah_photo"
            tools:text="0" />

        <TextView
            android:id="@+id/tv_item_halaqah_count_half"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_item_halaqah_photo"
            app:layout_constraintStart_toEndOf="@+id/tv_item_halaqah_count_permit"
            app:layout_constraintTop_toTopOf="@+id/iv_item_halaqah_photo"
            tools:text="0" />

        <TextView
            android:id="@+id/tv_item_halaqah_count_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_item_halaqah_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tv_item_halaqah_count_half"
            app:layout_constraintTop_toTopOf="@+id/iv_item_halaqah_photo"
            tools:text="0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>